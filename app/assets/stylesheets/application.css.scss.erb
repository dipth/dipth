@import url(http://fonts.googleapis.com/css?family=Antic);
@import url(http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:300);

$header_height: 76px;

html, body {height: 100%;}

body{
	background: white url(<%= asset_path 'body_subpage_bg.png' %>) repeat-x top left;
	font-size: 13px;
	color: #6c7a84;
}

body.frontpage {
  background-image: url(<%= asset_path 'body_bg.png' %>);
}

#header {
	height: $header_height;
}

#header .divider {
  margin: 0px 9px 0px 9px;
}

#main_menu {
  margin-top: 21px;
  float: right;
  list-style: none;
  font-size: 18px;
  font-family: 'Antic', sans-serif;
}

#main_menu li {
  float: left;
  height: 34px;
  width: 90px;
  margin-right: 15px;
  line-height: 34px;
  text-align: center;
}

#main_menu li a {
  color: white;
  text-decoration: none;
}

#main_menu li a:hover {
  color: #b8d3df;
}

body.frontpage #main_menu li.frontpage, body.blog_entries #main_menu li.blog_entries,
body.about #main_menu li.about, body.projects #main_menu li.projects,
body.contact #main_menu li.contact {
  background: url(<%= asset_path 'main_menu_selected_bg.png' %>) no-repeat top left;
}

#main_menu li.selected a {
  
}


#search_container {
  width: 160px;
  height: 34px;
  margin-top: 21px;
  background: transparent url(<%= asset_path 'search_input_bg.png' %>) no-repeat top left;
	float: right;
}

#search_container input {
  width: 120px;
  height: 25px;
  font-size: 11px;
  border: none;
  margin: 4px 0px 0px 8px;
  padding: 0px;
  background: transparent;
  color: #b8d3df;
  outline: none;
}

#main_content_container {
  padding-top: 20px;
}

.align_center {
  text-align: center;
}

#frontpage_banner {
  margin-bottom: 20px;
}

h1, h2 {
  font-family: 'Yanone Kaffeesatz', sans-serif;
  color: #383f43;
  font-weight: normal;
  margin: 0px;
  font-size: 22px;
}

h1 {
  background-color: #ebf3f3;
  padding: 10px 15px 10px 15px;
  margin-bottom: 20px;
}

h2 {
  
}

.box {
  background-color: #ebf3f3;
  padding: 10px 15px 10px 15px;
}

.box ul li {
  margin-bottom: 6px;
}

.blog_entry {
  background: white url(<%= asset_path 'blog_entry_bg.png' %>) repeat-y top left;
  margin-bottom: 20px;
}

.blog_entry .inner {
  background: url(<%= asset_path 'blog_entry_gradient.png' %>) no-repeat bottom left;
  position: relative;
}

.blog_entry .inner .top {
  background: url(<%= asset_path 'blog_entry_top.png' %>) no-repeat top left;
  height: 10px;
}

.blog_entry .inner .bottom {
  background: url(<%= asset_path 'blog_entry_bottom.png' %>) no-repeat top left;
  height: 11px;
}

.blog_entry .inner .date {
  background: url(<%= asset_path 'blog_entry_date_bg.png' %>) no-repeat center right;
  height: 64px;
  width: 70px;
  top: 10px;
  left: 0px;
  position: absolute;
  text-align: center;
  color: white;
  font-family: 'Yanone Kaffeesatz', sans-serif;
  font-size: 15px;
}

.blog_entry .inner .date .day {
  font-weight: bold;
  font-size: 24px;
}

.blog_entry .inner .date .month {
  font-size: 20px;
}

.blog_entry .inner .date .year {
  font-weight: bold;
  font-size: 16px;
}

.blog_entry .inner .middle {
  padding: 0px 20px 0px 90px;
}

.blog_entry h2 {
  border-bottom: 2px solid #ebf3f3;
  padding-bottom: 10px;
}

.strong {
  font-weight: bold;
}

#wrap {
  min-height: 100%;
}

#main {
  overflow:auto;
  padding-bottom: 60px;
}

#footer {
  position: relative;
	margin-top: -60px; /* negative value of footer height */
	height: 60px;
	clear:both;
	background-color: #0d0e0e;
	color: #d2d2d2;
	line-height: 60px;
	font-size: 11px;
	font-family: 'Antic', sans-serif;
}

#footer .grid_12 {
  padding-left: 17px;
}