@import url(http://fonts.googleapis.com/css?family=Antic);
@import url(http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300);

$header_height: 76px;

body{
	background: white url(<%= asset_path 'body_bg.png' %>) repeat-x top left;
	font-size: 11px;
}

#header {
	height: $header_height;
}

#header .divider {
  margin: 0px 9px 0px 9px;
}

#main_menu {
  margin-top: 21px;
  float: right;
  list-style: none;
  font-size: 18px;
  font-family: 'Antic', sans-serif;
}

#main_menu li {
  float: left;
  height: 34px;
  width: 90px;
  margin-right: 15px;
  line-height: 34px;
  text-align: center;
}

#main_menu li a {
  color: white;
  text-decoration: none;
}

#main_menu li a:hover {
  color: #b8d3df;
}

#main_menu li.selected {
  background: url(<%= asset_path 'main_menu_selected_bg.png' %>) no-repeat top left;
}

#main_menu li.selected a {
  
}


#search_container {
  width: 160px;
  height: 34px;
  margin-top: 21px;
  background: transparent url(<%= asset_path 'search_input_bg.png' %>) no-repeat top left;
	float: right;
}

#search_container input {
  width: 120px;
  height: 25px;
  font-size: 11px;
  border: none;
  margin: 4px 0px 0px 8px;
  padding: 0px;
  background: transparent;
  color: #b8d3df;
}

#main_content_container {
  padding-top: 20px;
}

.align_center {
  text-align: center;
}

#frontpage_banner {
  margin-bottom: 20px;
}

h1 {
  background-color: #ebf3f3;
  color: #383f43;
  padding: 10px 15px 10px 15px;
  font-family: 'Open Sans Condensed', sans-serif;
  font-size: 20px;
  font-weight: normal;
  margin: 0px;
}

.box {
  background-color: #ebf3f3;
}